\renewcommand*{\thepage}{\arabic{section}-\arabic{page}} % pagenumber with section praefix     
\cfoot{\thepage}



% define Übung and Aufgabe as section names
% -----------------------------------------------------------
\renewcommand*\thesection{Übung~\arabic{section}:}   % Preafix vor section-Titel
\renewcommand*\thesubsection{Aufgabe~\arabic{section}.\arabic{subsection}:}
%  \renewcommand{\autodot}{:}
% re-adjust equation numbering (1.1, 1.2,... 2.1, 2.2)
\numberwithin{equation}{section}
\renewcommand{\theequation}{\arabic{section}.\arabic{equation}}
% re-adjust figure numbering (1.1, 1.2,... 2.1, 2.2)
\numberwithin{figure}{section}
\renewcommand{\thefigure}{\arabic{section}.\arabic{figure}}
\renewcommand{\thetable}{\arabic{section}.\arabic{table}}
% define setting for klausurvorbereitung
\newcommand{\kvset}{
\renewcommand*{\thepage}{\arabic{page}}  % pagenumber w/o praefix    
\setcounter{subsection}{0} 
\renewcommand*\thesubsection{Aufgabe~\arabic{subsection}:}
\clearpage
\setcounter{page}{1}
}



% enumerate shortform
% -----------------------------------------------------------
\newcommand{\enab}{\begin{enumerate}[label=\alph*)]}
\newcommand{\enae}{\end{enumerate}}
\newcommand{\enabres}{\begin{enumerate}[label=\alph*),resume]}



% spacing adjustments for at paragraphs
% -----------------------------------------------------------
 \setlength{\parindent}{0pt} % no indent at new paragraph
% adjust spacing before and after subsection title
\renewcommand\section{\@startsection
   {section}{1}{0mm}%      % name, ebene, einzug
   {\baselineskip}%            % vor-abstand
   {1.5\baselineskip}%            % nach-abstand
    {\bfseries\Large}%           % layout
   }
\makeatother
% adjust spacing before and after section title
\makeatletter
\renewcommand\subsection{\@startsection
   {subsection}{2}{0mm}%      % name, ebene, einzug
   {2\baselineskip}%            % vor-abstand
   {\baselineskip}%            % nach-abstand
    {\bfseries\large}%           % layout
   }
\makeatother



% make tables textwidth
% -----------------------------------------------------------
\newcommand{\urule}[1]{\multicolumn{#1}{c}{\rule{0.97\textwidth}{0pt}}\\[-2ex]\toprule}


% special definition for circles and squares for node- and element- id
%-----------------------------------------------
\newcommand{\nodeid}[1]{{
     \hspace{-0.52em}
     \renewcommand{\arraystretch}{0.58}
     \begin{array}{c}
     {\scriptstyle \bigcirc}\\[-3.0mm]{\scriptscriptstyle #1}
     \end{array}
     \hspace{-0.45em}
     }}
\newcommand{\nodeidnel}{%
     (nel)
     }
\newcommand{\elemid}[1]{{%
%     \fboxsep0.1em
%     \fboxrule0.3pt
%     \fbox{\mbox{$\scriptscriptstyle #1$}}
      \hspace{-0.47em}
      \renewcommand{\arraystretch}{0.1}
      \begin{array}{c}
      {\textstyle \Box}\\[-2.27mm]{\scriptscriptstyle #1}
      \end{array}
      \hspace{-0.40em}
     }}
\newcommand{\elemidnele}{%
     [nele]
     }
\newcommand{\nodeidpic}[1]{{
     \hspace{-0.25em}
     \renewcommand{\arraystretch}{0.55}
     \begin{array}{c}
     {\scriptstyle \bigcirc}\\[-2.7mm]{\scriptscriptstyle #1}
     \end{array}
     \hspace{-0.2em}
     }}


